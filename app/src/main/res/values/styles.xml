<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyNavigationHeaderTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/navigation_header_padding</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyCardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/my_cardview_style_margin_top</item>
        <item name="android:layout_marginRight">@dimen/my_cardview_style_margin_left_right</item>
        <item name="android:layout_marginLeft">@dimen/my_cardview_style_margin_left_right</item>
        <item name="android:layout_marginBottom">@dimen/my_cardview_style_margin_bottom</item>
    </style>

    <style name="MyRecyclerItemsTextviews">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="MyNavigationViewStyle">
        <item name="android:fontFamily">casual</item>
    </style>

</resources>