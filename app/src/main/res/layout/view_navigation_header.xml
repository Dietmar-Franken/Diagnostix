<?xml version="1.0" encoding="utf-8"?>
<!-- NavigationView Header in DrawerLayout -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="bottom"
    android:background="@drawable/drawable_header_background">

    <ImageView
        android:layout_width="99dp"
        android:layout_height="99dp"
        android:paddingTop="21dp"
        android:contentDescription="@string/string_image"
        app:srcCompat="@drawable/drawable_header_icon"/>

    <TextView
        android:id="@+id/text_header_upper"
        android:paddingTop="14dp"
        style="@style/MyNavigationHeaderTextViewStyle"/>

    <TextView
        android:id="@+id/text_header_lower"
        style="@style/MyNavigationHeaderTextViewStyle"/>

</LinearLayout>