<?xml version="1.0" encoding="utf-8"?>
<!-- NavigationView Header in DrawerLayout -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_header_height"
    android:orientation="vertical"
    android:padding="@dimen/navigation_header_padding"
    android:gravity="bottom"
    android:background="@drawable/drawable_header_background">

    <ImageView
        android:layout_width="@dimen/navigation_header_image_width_height"
        android:layout_height="@dimen/navigation_header_image_width_height"
        android:paddingTop="@dimen/navigation_header_image_padding_top"
        android:contentDescription="@string/string_image"
        app:srcCompat="@drawable/drawable_header_icon"/>

    <TextView
        android:id="@+id/text_header_upper"
        android:paddingTop="@dimen/navigation_header_text_padding_top"
        style="@style/MyNavigationHeaderTextViewStyle"/>

    <TextView
        android:id="@+id/text_header_lower"
        style="@style/MyNavigationHeaderTextViewStyle"/>

</LinearLayout>