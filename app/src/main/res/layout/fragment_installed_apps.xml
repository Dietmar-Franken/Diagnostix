<?xml version="1.0" encoding="utf-8"?>
<!-- shows applications' list initialized in InstalledAppsFragment -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MyCardViewStyle"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_installed_apps"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/string_image"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_installed_apps_descript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="serif-monospace"/>

            <TextView
                android:id="@+id/text_installed_apps_detailed"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold|italic"
                android:fontFamily="cursive"/>

        </LinearLayout>

        <ListView
            android:id="@+id/listview_instaled_apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</android.support.v7.widget.CardView>