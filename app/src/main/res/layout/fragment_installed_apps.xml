<?xml version="1.0" encoding="utf-8"?>
<!-- shows applications' list initialized in InstalledAppsFragment -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/cardview_radius_and_elevation"
    app:cardElevation="@dimen/cardview_radius_and_elevation"
    app:contentPadding="@dimen/cardview_intalled_apps_content_padding"
    style="@style/MyCardViewStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_installed_apps"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/imageview_installed_apps_height"
            android:layout_marginEnd="@dimen/imageview_installed_apps_margin_end"
            android:adjustViewBounds="true"
            android:contentDescription="@string/string_image"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_installed_apps_descript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_installed_apps_detailed"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_detailed_installed_apps_height"
                android:fontFamily="cursive"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold|italic"/>

        </LinearLayout>

        <ListView
            android:id="@+id/listview_instaled_apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</android.support.v7.widget.CardView>